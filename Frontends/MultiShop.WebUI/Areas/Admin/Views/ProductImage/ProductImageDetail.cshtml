@model UpdateProductImageDto
@{
    ViewData["Title"] = "ProductImagaDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün Görselleri Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="ProductImageId" />
                        <input type="hidden" asp-for="ProductId" />
                        <label>Birinci Görsel</label>
                        <input type="text" class="form-control" asp-for="Image1" />
                        <br />
                        <label>İkinci Görsel</label>
                        <input type="text" class="form-control" asp-for="Image2" />
                        <br />
                        <label>Üçüncü Görsel</label>
                        <input type="text" class="form-control" asp-for="Image3" />
                        <br />
                        <label>Dördüncü Görsel</label>
                        <input type="text" class="form-control" asp-for="Image4" />
                        <br />
                        <button class="btn btn-success">Ürün Görsellerini Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

