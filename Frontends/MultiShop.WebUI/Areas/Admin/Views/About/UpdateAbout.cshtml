@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Hakkında Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post" asp-area="Admin" asp-controller="About" asp-action="UpdateAbout" asp-route-id="">
                        <input type="hidden" asp-for="AboutId" />
                        <label>Hakkında</label>
                        <input type="text" class="form-control" asp-for="Description" />
                        <br />
                        <label>Email</label>
                        <input type="text" class="form-control" asp-for="Email" />
                        <br />
                        <label>Adres</label>
                        <input type="text" class="form-control" asp-for="Address" />
                        <br />
                        <label>Telefon Numarası</label>
                        <input type="text" class="form-control" asp-for="Phone" />
                        <br />
                        <button class="btn btn-primary">Hakkındayı Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>