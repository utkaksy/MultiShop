@model BasketTotalDto
@{
    Model.DiscountRate = ViewBag.rate;
    var tax = Model.TotalPrice * 1 / 10;
    var priceWithTax = Model.TotalPrice + tax;
    var priceWithDiscount = priceWithTax - priceWithTax * Model.DiscountRate / 100;
    var priceWithCargoFee = priceWithDiscount + 10;
}
<div class="bg-light p-30 mb-5">
    <div class="border-bottom">
        <h6 class="mb-3">Ürünler</h6>
        @foreach (var item in Model.BasketItems)
        {
            <div class="d-flex justify-content-between">
                <p>@item.ProductName</p>
                <p>@item.Price ₺</p>
            </div>
        }
    </div>
    <div class="border-bottom pt-3 pb-2">
        <div class="d-flex justify-content-between mb-3">
            <h6>Kdvsiz Alışveriş Tutarı</h6>
            <h6>@Model.TotalPrice</h6>
        </div>
        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Kargo Ücreti</h6>
            <h6 class="font-weight-medium">10 ₺</h6>
        </div>
    </div>
    <div class="pt-2">
        <div class="d-flex justify-content-between mt-2">
            <h5>Genel Toplam</h5>
            <h5>@priceWithCargoFee ₺</h5>
        </div>
    </div>
</div>